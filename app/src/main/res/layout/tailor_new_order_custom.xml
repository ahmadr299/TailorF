<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/image1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/personimage"/>

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image1"
            android:layout_toRightOf="@+id/image1"
            android:fontFamily="@font/segoe_ui_semibold"
            android:text="Pant 01"
            android:textColor="#3B271D"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="03xxxxxxx"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/image1"
            android:layout_toEndOf="@+id/image1"
            android:layout_below="@+id/orderNo"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderNo"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="abc@gmail.com"
            android:layout_toRightOf="@id/image1"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/customerName"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="category"
            android:layout_toRightOf="@id/image1"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/phone"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/measurements"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="Measurements"
            android:layout_toRightOf="@id/image1"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/category"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duedate"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="28/7/2021"
            android:layout_toRightOf="@id/image1"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/measurements"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="33B,Johar Town, Lahore, Pakistan"
            android:layout_toRightOf="@id/image1"
            android:layout_toEndOf="@id/image1"
            android:layout_below="@id/duedate"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
            <Button
                android:id="@+id/acceptbtn"
                android:textColor="@color/shadowcolor"
                android:background="@drawable/btn_bg"
                android:text="Accept"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duedate"
                android:layout_marginTop="@dimen/_20sdp">
            </Button>
        <Button
            android:id="@+id/rejectbtn"
            android:textColor="@color/shadowcolor"
            android:background="@drawable/btn_bg"
            android:text="Reject"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duedate"
            android:layout_toRightOf="@+id/acceptbtn"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp">
        </Button>
        <View
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_below="@id/acceptbtn"
            android:background="@color/app_color"/>

    </RelativeLayout>



</LinearLayout>