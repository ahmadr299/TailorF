<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/shopimage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/personimage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopName"
            android:text="Pant 01"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/segoe_ui_semibold"
            android:textColor="#3B271D"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/shopimage"
            android:layout_toEndOf="@+id/shopimage"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="03xxxxxxx"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/shopimage"
            android:layout_toEndOf="@+id/shopimage"
            android:layout_below="@+id/email"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="abc@gmail.com"
            android:layout_toRightOf="@id/shopimage"
            android:layout_toEndOf="@id/shopimage"
            android:layout_below="@id/shopName"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categories"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="Categories"
            android:layout_toRightOf="@id/shopimage"
            android:layout_toEndOf="@id/shopimage"
            android:layout_below="@id/phone"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tailoraddress"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="Address"
            android:layout_toRightOf="@id/shopimage"
            android:layout_toEndOf="@id/shopimage"
            android:layout_below="@id/categories"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tailorRating"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#646464"
            android:text="Rating"
            android:layout_toRightOf="@id/shopimage"
            android:layout_toEndOf="@id/shopimage"
            android:layout_below="@id/tailoraddress"
            android:textSize="14dp"
            android:layout_marginLeft="10dp" />
        <View
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_below="@id/tailorRating"
            android:background="@color/app_color"/>

    </RelativeLayout>



</LinearLayout>