                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_bg_shape"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="center"
                    android:hint="100"
                    android:inputType="number"
                    android:maxLength="5"
