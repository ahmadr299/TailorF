<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tailor_Profile_Acitivity"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/_4sdp"
        android:background="@color/app_color2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/back_button_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/segoe_ui_semibold"
            android:gravity="center"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:text="PROFILE"
            android:textColor="#EFE0BB"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:visibility="gone"
            android:id="@+id/editProfileOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:padding="@dimen/_4sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#EFE0BB" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/mainLayoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/_12sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text=" Person Name"
                    android:textColor="@color/font_bold_color"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/tailorprofilePersonName_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:hint="Name:"
                    android:lines="1"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    android:textColorHint="@color/font_hint_color" />


                <TextView
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:textColor="@color/font_bold_color"

                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tailorprofileShopName_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:textColorHint="@color/font_hint_color"
                    android:fontFamily="@font/segoe_ui"
                    android:hint="Shop Name:"
                    android:lines="1"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <EditText
                    android:enabled="true"
                    android:id="@+id/tailorprofilePhoneNumber_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:fontFamily="@font/segoe_ui"
                    android:hint="03xxxxxxxxx"
                    android:inputType="number"
                    android:lines="1"
                    android:textColorHint="@color/font_hint_color"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/tailorWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:fontFamily="@font/segoe_ui"
                    android:hint="Wallet"
                    android:inputType="text"
                    android:lines="1"
                    android:textColorHint="@color/font_hint_color"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/borderline_profile"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/_12sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Category"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/addCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:text="Add Category"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    />
                <TextView
                    android:id="@+id/tv_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No category Select"
                    android:textColor="@color/font_bold_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Prices"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/addPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:text="Add Price"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/borderline_profile"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/_12sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Address"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <EditText
                    android:enabled="true"
                    android:id="@+id/profileCountryAddress_ed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:hint="Australia"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:paddingLeft="18dp"
                    android:textColorHint="@color/font_hint_color" />

                <EditText

                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/profileCityAddress_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:hint="Melbourne"
                    android:textColorHint="@color/font_hint_color" />

                <EditText
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/profileAreaAddress_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:hint="Fawkner street"
                    android:textColorHint="@color/font_hint_color" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_semibold"
                    android:text="Add Logo (optional)"
                    android:textColor="@color/font_bold_color"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/app_color"
                    android:id="@+id/tailorShopLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_background"
                    android:elevation="3dp"
                    android:textSize="@dimen/_10ssp"
                    android:padding="16dp"
                    android:fontFamily="@font/segoe_ui"
                    android:gravity="start"
                    android:hint="Select Shop Logo"
                    android:textColorHint="@color/font_hint_color" />
            </LinearLayout>

            <Button
                android:id="@+id/saveProfile"
                android:textColor="@color/shadowcolor"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/btn_bg"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
